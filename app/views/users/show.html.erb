<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>

		<% if current_user.admin? && !current_user?(@user) %>
		    <%= link_to "delete", @user, method: :delete, confirm: "You sure?" %>
		 <% end %>
      </h1>
    </section>
  </aside>
</div>